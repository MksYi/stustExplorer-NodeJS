block content
	.container
		script.
			$(document).ready(function() {
				
				if($("#logout").text() == "登出 ()"){
					window.location.replace('/?act=logout');
				}

				usrLoginFlip();
				FlipTable();
				$("body").on("click",".window",function(){
					$(".window").colorbox({iframe:true, width:"80%", height:"80%"});
				});
			});

			function usrLoginFlip(){
				var flipScript = '<iframe sandbox="allow-same-origin allow-scripts allow-popups allow-forms allow-pointer-lock" src="https://eportal.stust.edu.tw/Ap/111"></iframe>'
				var iframe = document.createElement('iframe');
				document.body.appendChild(iframe);
				iframe.hidden = true;
				iframe.contentWindow.document.open();
				iframe.contentWindow.document.write(flipScript);
				iframe.contentWindow.document.close();
			}

			function FlipTable() {
				$.ajax({
							url: '/getflipnotice',
							dataType: "json",
							success: function(data) {

								if (data['EventTableArr'] == null || (data['CommentTableBody'] == null || data['BulletinTableBody'] == null )){
									if (data['Event_hrefs'] == null || (data['Comment_hrefs'] == null || data['Bulletin_hrefs'] == null)) {
										window.location.replace('/?act=logout');
										return;
									}
								}
								
								var j = 0;
								var EventTableBody = $("#EventTableArr").find("tbody");
								console.log(data['EventTableArr'].Notice)
								for(var i in data['EventTableArr']) {
									var Notice = data['EventTableArr'][i];
									var href = data['Event_hrefs'];
									if(Notice.num == "沒有資料"){
										break;
									}

									EventTableBody.append('<tr>' + 
														'<td>' + Notice.num  + '</td>' +
														'<td><a class="window" href="http://flip.stust.edu.tw' + href[j++].link + '" target="_blank">' + Notice.title + '</a></td>' +
														'<td>' + Notice.date + '</td>' +
														'<td>' + Notice.course + '</td>' +				
														'<td>' + Notice._class + '</td>' +
														'</tr>');
										
								}
								
								j = 0;
								var CommentTableBody = $("#CommentTableArr").find("tbody");
								for(var i in data['CommentTableArr']) {
									var Notice = data['CommentTableArr'][i];
									var href = data['Comment_hrefs'];
									if(Notice.num == "沒有資料"){
										break;
									}

									CommentTableBody.append('<tr>' + 
														'<td>' + Notice.num  + '</td>' +
														'<td><a class="window" href="http://flip.stust.edu.tw' + href[j++].link + '" target="_blank">' + Notice.title + '</a></td>' +
														'<td>' + Notice.date + '</td>' +
														'<td>' + Notice.course + '</td>' +
														'<td>' + Notice._class + '</td>' +
														'</tr>');
								}
								
								j = 0; //開頭多撈
								var BulletinTableBody = $("#BulletinTableArr").find("tbody");
								for(var i in data['BulletinTableArr']) {
									var Notice = data['BulletinTableArr'][i];
									var href = data['Bulletin_hrefs'];
									if(Notice.num == "沒有資料"){
										break;
									}
									BulletinTableBody.append('<tr>' + 
														'<td>' + Notice.num + '</td>' +
														'<td><a class="window" href="http://flip.stust.edu.tw' + href[j++].link + '" target="_blank">' + Notice.title + '</a></td>' +
														'<td>' + Notice.date + '</td>' +
														'<td>' + Notice.course + '</td>' +
														'<td>' + Notice._class + '</td>' +
														'</tr>');
										
								}
													
							}
				});
			}


